snippet formselect
<div class="$1">
    <div class="form-group">
	    <label class="control-label">$2</label>

	    <select class="form-control">
		<option>$3</option>
	    </select>
    </div>
</div>
endsnippet

snippet phppanel
<div class="panel panel-default">
    <div class="panel-heading">$1</div>

    <div class="panel-body">
	$2
    </div>
</div>
endsnippet

snippet phptable
 <div class="table-responsive">
