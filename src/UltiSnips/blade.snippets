snippet bfor
@foreach($1 as $2)
    $3
@endforeach
endsnippet

snippet bif
@if($1)
    $3
@endif
endsnippet


snippet forminput
<div class="$1">
    <div class="form-group">
	    <label class="control-label">$2</label>

	    <input type="$3" 
	    name="$4" 
	    class="form-control" 
	    id="$5" 
	    placeholder="$6" 
	    >
    </div>
</div>
endsnippet

snippet formtextarea
